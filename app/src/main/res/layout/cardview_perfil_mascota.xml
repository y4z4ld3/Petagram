<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/descr_height"
    android:layout_height="wrap_content"
    android:padding="@dimen/civ_width"
    android:layout_gravity="center_horizontal"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/activitiy_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/imgFotoColeccionMascota"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:src="@drawable/dogface_100527"/>

       <LinearLayout
           android:layout_height="wrap_content"
           android:weightSum="1"
           android:layout_width="match_parent"
           android:padding="@dimen/margen_layer"
           android:orientation="horizontal">

           <androidx.appcompat.widget.AppCompatTextView
               android:id="@+id/tvVotosColeccion"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/voto"
               android:paddingRight="@dimen/padding_mascota"
               android:textAlignment="textEnd"
               android:layout_weight="0.5"
               android:textSize="@dimen/nombre_size"
               android:textStyle="bold"
               android:gravity="end"
               android:layout_gravity="end" />

           <androidx.appcompat.widget.AppCompatImageView
               android:id="@+id/imgHuesoAmarilloColeccion"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:paddingRight="@dimen/padding_mascota"
               android:src="@drawable/hueso_amarillo"/>
       </LinearLayout>
   </LinearLayout>
</androidx.cardview.widget.CardView>